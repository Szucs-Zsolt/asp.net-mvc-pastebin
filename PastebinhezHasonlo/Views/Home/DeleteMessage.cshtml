@model PastebinhezHasonlo.Models.Message

<h1 class="text-center">Üzenet törlése</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All"></div>

            <input asp-for="MessageId" hidden />
                
            <div class="form-group">
                <label asp-for="Msg" class="control-label"></label>
                <textarea rows="10" asp-for="Msg" disabled class="form-control col-md-12"> </textarea>
            </div>

            <div class="row mx-1 mt-4">
                <a href="javascript:history.go(-1)" class="btn btn-primary col-4">Vissza az előző oldalra</a>
                <div class="col-4"></div>
                <input type="submit" value="Üzenet törlése" class="btn btn-danger col-4" />
            </div>
        </form>
    </div>
</div>

