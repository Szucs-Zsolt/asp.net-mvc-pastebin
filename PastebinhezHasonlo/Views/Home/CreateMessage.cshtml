@model PastebinhezHasonlo.Models.CreateMessageVM

<h1 class="text-center">Üzenet írása</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All"></div>

            <input asp-for="Message.MessageId" hidden />
            
            <div class="form-group">
                <label asp-for="Message.Msg" class="control-label"></label>
                <textarea rows="10" asp-for="Message.Msg" class="form-control col-md-12"> </textarea>
                <span asp-validation-for="Message.Msg" class="text-danger"></span>
            </div>
@* Erre már nincs szükség, nem check-box-szal, hanem az ezután következő select-ben választjuk ki,
   hogy mennyi ideig őrizzük meg az üzenetet. (Az action-ben állítjuk be az alapján ténylegesen.)
            <div class="form-group py-2">
                <input asp-for="Message.DiscardFirstRead" class="form-check-input" />
                <label asp-for="Message.DiscardFirstRead" class="form-check-label"></label>
            </div>
*@
            <div class="form-group py-2">
                <label class="control-label">Törlés ennyi idő után:</label>
                <select asp-for="@Model.DiscardTime" asp-items="@Model.DiscardTimeList" class="form-select"></select>
            </div>


            <div class="form-group py-2">
                <input type="submit" value="Üzenet tárolása" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vissza a kezdőlapra</a>
</div>
