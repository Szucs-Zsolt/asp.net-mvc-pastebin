@model CreateMessageVM

<h1 class="text-center">Üzenet szerkesztése</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All"></div>

            <input asp-for="Message.MessageId" hidden />
            <input asp-for="Message.UserId" hidden />
                  
            <div class="form-group">
                <label asp-for="Message.Msg" class="control-label"></label>
                <textarea rows="10" asp-for="Message.Msg" class="form-control col-md-12"> </textarea>
                <span asp-validation-for="Message.Msg" class="text-danger"></span>
            </div>

            <div class="form-group py-2">
                <label class="control-label">Törlés ennyi idő után:</label>
                <select asp-for="@Model.DiscardTime" asp-items="@Model.DiscardTimeList" class="form-select text-bg-primary"></select>
            </div>

            <div class="row mx-1 mt-4">
                <a href="javascript:history.go(-1)" class="btn btn-primary col-4">Vissza az előző oldalra</a>
                <div class="col-4"></div>
                <input type="submit" value="Üzenet módosítása" class="btn btn-success col-4" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vissza a kezdőlapra</a>
</div>
